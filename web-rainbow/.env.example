# WalletConnect Project ID
# 获取地址: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# 是否启用测试网络 (true/false)
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Infura API Key (可选，用于更好的网络连接)
NEXT_PUBLIC_INFURA_KEY=your_infura_api_key

# Alchemy API Key (可选，备用 RPC 提供商)
NEXT_PUBLIC_ALCHEMY_KEY=your_alchemy_api_key

# 合约部署信息 (自动生成或手动设置)
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_NETWORK_ID=
NEXT_PUBLIC_NETWORK_NAME=

# 分析和监控 (可选)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# 应用配置
NEXT_PUBLIC_APP_NAME="Red Packet DApp"
NEXT_PUBLIC_APP_DESCRIPTION="基于以太坊的去中心化红包应用"
NEXT_PUBLIC_APP_URL=http://localhost:3000
