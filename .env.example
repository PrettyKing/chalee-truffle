# ===================================
# .env.example - 环境变量配置示例
# ===================================

# 网络配置
PRIVATE_KEY=your_private_key_without_0x_prefix
INFURA_PROJECT_ID=your_infura_project_id
ETHERSCAN_API_KEY=your_etherscan_api_key

# 部署控制变量
DEPLOY_TOKEN=true
DEPLOY_EXCHANGE=true
DEPLOY_MARKETPLACE=false

# 测试网特定部署控制
DEPLOY_TOKEN_SEPOLIA=true
DEPLOY_EXCHANGE_SEPOLIA=true
DEPLOY_MARKETPLACE_SEPOLIA=false

# 主网特定部署控制  
DEPLOY_TOKEN_MAINNET=false
DEPLOY_EXCHANGE_MAINNET=true
DEPLOY_MARKETPLACE_MAINNET=true

# 已存在的合约地址（如果不重新部署）
CHM_TOKEN_ADDRESS=0x...
CHM_EXCHANGE_ADDRESS=0x...
COURSE_MARKETPLACE_ADDRESS=0x...

# 代币配置
INITIAL_TOKEN_SUPPLY=1000000
LIQUIDITY_AMOUNT=500000
